<% provide :title, t(".create_course") %>
<% provide :button_text,  t(".create_course") %>

<div class="row jumbotron mt-3">
  <div class="col-md-12">
    <h2 class="text-center"><%= t(".create_course") %></h2>
  </div>
  <div class="col-md-12">
    <% if has_role?(:admin) %>
      <%= render "form" %>
    <% else %>
      <h5 class="text-center text-danger">
        <%= t(".sorry") %>
      </h5>
    <% end %>
  </div>
</div>
