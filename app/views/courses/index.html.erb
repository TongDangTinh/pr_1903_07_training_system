<div class="row mt-3">
  <div class="col-md-12">
    <div class="row">
      <div class="col-md-6">
        <h2>All Courses</h2>
      </div>
      <div class="col-md-6">
        <% if has_role?(:admin) %>
          <%= link_to "New course", new_course_path, class: "btn btn-outline-primary float-right" %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-md-12">
    <div class="row">
      <% @courses.each do |course| %>
        <div class="col-md-6">
          <%= link_to course.course_name, course %>
          <%= course.description.html_safe %>
          
          <% if has_role?(:admin) %>
            <%= link_to "Edit course", edit_course_path(course), class: "btn btn-outline-secondary" %>
            <%= link_to "Delete course", course, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-outline-danger" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
