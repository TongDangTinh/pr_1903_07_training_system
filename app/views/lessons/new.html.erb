<% provide :title, t(".create_lesson") %>
<% provide :button_text, t(".create_lesson") %>
<div class="row">
  <div class="col-md-6 offset-md-3">
    <h4 class="text-center"><%= t(".create_lesson") %></h4>
    <%= render "form" %>
  </div>
  <div class="col-md-12">
    <% if has_role?(:admin) %>
      <%= render "form" %>
    <% else %>
      <h5 class="text-center text-danger">
        <%= t(".sorry") %>
      </h5>
    <% end %>
  </div>
</div>
